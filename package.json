{
  "name": "ai-vscode-extension",
  "displayName": "AI Code Assistant",
  "version": "0.1.0",
  "description": "In-editor AI assistant with code completions and contextual chat",
  "categories": [
    "AI",
    "Programming Languages",
    "Snippets"
  ],
  "publisher": "ai-assistant",
  "main": "./dist/extension.js",
  "scripts": {
    "build": "npm run build:ext && npm run build:webview",
    "build:ext": "tsc -p .",
    "build:webview": "vite build --config vite.config.ts",
    "dev": "concurrently \"tsc -p . -w\" \"vite build --config vite.config.ts -w\"",
    "lint": "eslint src webview-src --ext ts,tsx",
    "vscode:prepublish": "npm run build"
  },
  "contributes": {
    "commands": [
      {
        "command": "ai.assistant.start",
        "title": "AI Assistant: Open Chat",
        "category": "AI Assistant"
      },
      {
        "command": "ai-assistant.getCompletion",
        "title": "AI Assistant: Get Completion",
        "category": "AI Assistant"
      },
      {
        "command": "ai-assistant.explainCode",
        "title": "AI Assistant: Explain Code",
        "category": "AI Assistant"
      },
      {
        "command": "ai-assistant.generateTests",
        "title": "AI Assistant: Generate Tests",
        "category": "AI Assistant"
      }
    ],
    "keybindings": [
      {
        "command": "ai.assistant.start",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "ai-assistant.getCompletion",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i"
      }
    ],
    "views": {
      "ai-assistant-sidebar": [
        {
          "id": "ai-assistant-chat",
          "name": "Chat",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-assistant-sidebar",
          "title": "AI Assistant",
          "icon": "$(sparkle)"
        }
      ]
    },
    "configuration": {
      "title": "AI Assistant",
      "properties": {
        "ai-assistant.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for AI completions and chat"
        },
        "ai-assistant.model": {
          "type": "string",
          "default": "gpt-4-turbo",
          "enum": [
            "gpt-4-turbo",
            "gpt-4",
            "gpt-3.5-turbo"
          ],
          "description": "AI model to use for completions"
        },
        "ai-assistant.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "Temperature for AI responses (0-2)"
        },
        "ai-assistant.maxTokens": {
          "type": "number",
          "default": 2000,
          "minimum": 100,
          "maximum": 8000,
          "description": "Maximum tokens for AI responses"
        },
        "ai-assistant.provider": {
          "type": "string",
          "default": "openai",
          "enum": [
            "openai",
            "local"
          ],
          "description": "AI provider (OpenAI or local endpoint)"
        },
        "ai-assistant.localEndpoint": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "Local AI endpoint URL (when using local provider)"
        },
        "ai-assistant.maxRetries": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "Maximum number of retry attempts for AI API calls"
        },
        "ai-assistant.retryDelay": {
          "type": "number",
          "default": 1000,
          "minimum": 100,
          "maximum": 10000,
          "description": "Delay between retry attempts in milliseconds"
        },
        "ai-assistant.enableTokenCounting": {
          "type": "boolean",
          "default": true,
          "description": "Enable token counting and validation"
        },
        "ai-assistant.enableSafetyFilter": {
          "type": "boolean",
          "default": true,
          "description": "Enable safety filters for code content"
        }
      }
    }
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "dependencies": {
    "@monaco-editor/react": "latest",
    "@radix-ui/react-accordion": "latest",
    "@radix-ui/react-alert-dialog": "latest",
    "@radix-ui/react-aspect-ratio": "latest",
    "@radix-ui/react-avatar": "latest",
    "@radix-ui/react-checkbox": "latest",
    "@radix-ui/react-collapsible": "latest",
    "@radix-ui/react-context-menu": "latest",
    "@radix-ui/react-dialog": "latest",
    "@radix-ui/react-dropdown-menu": "latest",
    "@radix-ui/react-hover-card": "latest",
    "@radix-ui/react-label": "latest",
    "@radix-ui/react-menubar": "latest",
    "@radix-ui/react-navigation-menu": "latest",
    "@radix-ui/react-popover": "latest",
    "@radix-ui/react-progress": "latest",
    "@radix-ui/react-radio-group": "latest",
    "@radix-ui/react-scroll-area": "latest",
    "@radix-ui/react-select": "latest",
    "@radix-ui/react-separator": "latest",
    "@radix-ui/react-slider": "latest",
    "@radix-ui/react-slot": "latest",
    "@radix-ui/react-switch": "latest",
    "@radix-ui/react-tabs": "latest",
    "@radix-ui/react-toast": "latest",
    "@radix-ui/react-toggle": "latest",
    "@radix-ui/react-toggle-group": "latest",
    "@radix-ui/react-tooltip": "latest",
    "@vercel/analytics": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "latest",
    "embla-carousel-react": "latest",
    "immer": "latest",
    "input-otp": "latest",
    "jiti": "latest",
    "js-tiktoken": "^1.0.12",
    "less": "latest",
    "lightningcss": "latest",
    "lucide-react": "^0.454.0",
    "monaco-editor": "latest",
    "next": "15.2.4",
    "next-themes": "latest",
    "path": "latest",
    "react": "^19",
    "react-day-picker": "latest",
    "react-dom": "^19",
    "react-hook-form": "latest",
    "react-resizable-panels": "latest",
    "recharts": "latest",
    "sass": "latest",
    "sass-embedded": "latest",
    "sonner": "latest",
    "stylus": "latest",
    "sugarss": "latest",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "terser": "latest",
    "tsx": "latest",
    "tw-animate-css": "latest",
    "use-sync-external-store": "latest",
    "vaul": "latest",
    "vscode": "latest",
    "yaml": "latest",
    "zustand": "latest"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "postcss": "^8.5",
    "tailwindcss": "^4.1.9",
    "typescript": "^5.9.3",
    "vite": "^5.0.0"
  },
  "engines": {
    "vscode": "^1.85.0"
  }
}
